<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <!--
            ################################
              SHEET General Settings
            ################################
        -->
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:ns_helpdesk/Resources/Private/Language/locallang_flex.xlf:globalSettings</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <switchableControllerActions>
                        <TCEforms>
                            <label>LLL:EXT:ns_helpdesk/Resources/Private/Language/locallang_flex.xlf:display.mode</label>
                            <onChange>reload</onChange>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items>
                                    <numIndex index="0">
                                        <numIndex index="0">LLL:EXT:ns_helpdesk/Resources/Private/Language/locallang_flex.xlf:list</numIndex>
                                        <numIndex index="1">Tickets->list;Tickets->show;Tickets->closeTicket;Tickets->reopenTicket</numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">LLL:EXT:ns_helpdesk/Resources/Private/Language/locallang_flex.xlf:ticket_submission</numIndex>
                                        <numIndex index="1">Tickets->new;Tickets->create</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </switchableControllerActions>
                    <settings.listPageId>
                        <TCEforms>
                            <label>LLL:EXT:ns_helpdesk/Resources/Private/Language/locallang_flex.xlf:helpdesk.listPageId</label>
                            <displayCond>FIELD:switchableControllerActions:!IN:Tickets->new;Tickets->create</displayCond>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>1</minitems>
                            </config>
                        </TCEforms>
                    </settings.listPageId>
                    <settings.list.createPageId>
                        <TCEforms>
                            <label>LLL:EXT:ns_helpdesk/Resources/Private/Language/locallang_flex.xlf:helpdeks.ticketCreatePageId</label>
                            <displayCond>FIELD:switchableControllerActions:!IN:Tickets->new;Tickets->create</displayCond>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>1</minitems>
                            </config>
                        </TCEforms>
                    </settings.list.createPageId>
                </el>
            </ROOT>
        </sDEF>
         <settings.quickreply>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:ns_helpdesk/Resources/Private/Language/locallang_flex.xlf:helpdesk.mailTab</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.adminSubject>
                        <TCEforms>
                            <label>LLL:EXT:ns_helpdesk/Resources/Private/Language/locallang_flex.xlf:helpdesk.mail.adminSubject</label>
                            <displayCond>FIELD:sDEF.switchableControllerActions:=:Tickets->new;Tickets->create</displayCond>
                            <config>
                                <type>input</type>
                                <size>30</size>
                                <eval>trim,required</eval>
                            </config>
                        </TCEforms>
                    </settings.adminSubject>
                    <settings.visitorSubject>
                        <TCEforms>
                            <label>LLL:EXT:ns_helpdesk/Resources/Private/Language/locallang_flex.xlf:helpdesk.mail.visitorsSubject</label>
                            <displayCond>FIELD:sDEF.switchableControllerActions:=:Tickets->new;Tickets->create</displayCond>
                            <config>
                                <type>input</type>
                                <size>30</size>
                                <eval>trim,required</eval>
                            </config>
                        </TCEforms>
                    </settings.visitorSubject>
                    <settings.popoupMessage>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>LLL:EXT:ns_helpdesk/Resources/Private/Language/locallang_flex.xlf:helpdesk.popup.popupMessage</label>
                            <displayCond>FIELD:sDEF.switchableControllerActions:=:Tickets->new;Tickets->create</displayCond>
                            <config>
                                <type>text</type>
                                <eval>trim,required</eval>
                            </config>
                        </TCEforms>
                    </settings.popoupMessage>
                    <settings.body>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>LLL:EXT:ns_helpdesk/Resources/Private/Language/locallang_flex.xlf:helpdesk.mail.body</label>
                            <displayCond>FIELD:sDEF.switchableControllerActions:=:Tickets->new;Tickets->create</displayCond>
                            <config>
                                <type>text</type>
                                <enableRichtext>1</enableRichtext>
                                <eval>trim,required</eval>
                            </config>
                        </TCEforms>
                    </settings.body>
                </el>
            </ROOT>
        </settings.quickreply>
    </sheets>
</T3DataStructure>